<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories Table</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- Custom -->
    <link rel="stylesheet" href="css/baseTable.css">
    <link rel="stylesheet" href="css/navBar.css">
</head>

<body>
    <!-- Pop-up dialog -->
    <div id="modal-window-id" class="modal">
        <!-- Modal content with add user -->
        <div id="modal-window-add-record-id" class="modal-content-custom">
            <div class="dialogBlock">
                <p class="dialogTitle">Add database row</p>
                <div class="horDivider"></div>

                <p class="dialogText">Category data:</p>
                <input id="user-dialog-catNameID" class="modal-window-input" placeholder="Category name">
                <input id="user-dialog-catDescID" class="modal-window-input" placeholder="Description">

                <button onclick="AddRow()" class="dialogButton">Apply</button>
            </div>
        </div>

        <!-- Modal content with delete user -->
        <div id="modal-window-delete-record-by-id" class="modal-content-custom">
            <div class="dialogBlock">
                <p class="dialogTitle">Delete database row</p>
                <div class="horDivider"></div>

                <p class="dialogText">Category data:</p>
                <input id="user-dialog-catID" class="modal-window-input" placeholder="ID">

                <button onclick="DeleteRow()" class="dialogButton">Apply</button>
            </div>
        </div>
    </div>

    <!-- Navigation menu -->
    <div class="navbar_custom">
        <a href="/">Home</a>
        <a href="#news">Changelog</a>
        <div class="dropdown">
            <button class="dropbtn">Tables<i class="fa fa-caret-down marg-left-10px"></i></button>
            <div class="dropdown-content">
                <a href="/UsersTable">Users Table</a>
                <a href="/CustomersTable">Customers Table</a>
                <a href="/OrdersTable">Orders Table</a>
                <a href="/ProductsTable">Products Table</a>
                <a href="/SuppliersTable">Suppliers Table</a>
            </div>

        </div>

        <!-- Edit rows -->
        <div class="dropdown">
            <button class="dropbtn">Edit<i class="fa fa-caret-down marg-left-10px"></i></button>
            <div class="dropdown-content">
                <a onclick="ShowPopUpDialog(1)" class="dropdown-link-pointer">Add Record</a>
                <a onclick="ShowPopUpDialog(0)" class="dropdown-link-pointer">Delete Record(by id)</a>
            </div>
        </div>

        <!-- Change theme -->
        <div class="dropdown float-right">
            <button value="light" onclick="ChangeTheme()" id="theme-changerID" class="dropbtn">Dark mode</button>
        </div>
    </div>

    <!-- main content -->
    <div class="main">
        <table id="main-table-ID" class="table table-striped table-bordered table-hover table-hover-pointer table-responsive">
            <thead>
                <tr class="table-header-text-center">
                    <th class="table-header-text-center" scope="col">id</th>
                    <th class="table-header-text-center" scope="col">Category name</th>
                    <th class="table-header-text-center" scope="col">Category description</th>
                    <th class="table-header-text-center" scope="col">Picture</th>
                </tr>
            </thead>
            <tbody>
                <% categoriesData.forEach((data)=> { %>
                    <tr class="table-header-text-center">
                        <td>
                            <%= data.id %>
                        </td>
                        <td>
                            <%= data.name %>
                        </td>
                        <td>
                            <%= data.description %>
                        </td>
                        <td>
                            <%= data.picture %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script src="js/CategoriesTable_actions.js"></script>
<script src="js/Themes/UserTable_theme.js"></script>

</html>