<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suppliers table</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- Custom -->
    <link rel="stylesheet" href="css/baseTable.css">
    <link rel="stylesheet" href="css/navBar.css">
</head>

<body>
    <!-- Navigation menu -->
    <div class="navbar_custom">
        <a href="/">Home</a>
        <a href="#news">Changelog</a>
        <div class="dropdown">
            <button class="dropbtn">Tables<i class="fa fa-caret-down marg-left-10px"></i></button>
            <div class="dropdown-content">
                <a href="/CategoriesTable">Category Table</a>
                <a href="/CustomersTable">Customers Table</a> 
                <a href="/OrdersTable">Orders Table</a> 
                <a href="/ProductsTable">Products Table</a> 
                <a href="/UsersTable">Users Table</a> 
            </div>
        </div>

        <!-- Change theme -->
        <div class="dropdown float-right">
            <button value="light" onclick="ChangeTheme()" id="theme-changerID" class="dropbtn">Dark mode</button>
        </div>
    </div>

    <!-- main content -->
    <table id="main-table-ID" class="table table-striped table-bordered table-hover table-hover-pointer table-responsive">
        <thead>
            <tr class="table-header-text-center">
                <th class="table-header-text-center" scope="col">id</th>
                <th class="table-header-text-center" scope="col">Company Name</th>
                <th class="table-header-text-center" scope="col">Contact Name</th>
                <th class="table-header-text-center" scope="col">Contact Title</th>
                <th class="table-header-text-center" scope="col">Address</th>
                <th class="table-header-text-center" scope="col">City</th>
                <th class="table-header-text-center" scope="col">Region</th>
                <th class="table-header-text-center" scope="col">Postal Code</th>
                <th class="table-header-text-center" scope="col">Country</th>
                <th class="table-header-text-center" scope="col">Phone</th>
                <th class="table-header-text-center" scope="col">Fax</th>
                <th class="table-header-text-center" scope="col">Homepage</th>
            </tr>
        </thead>
        <tbody>
            <% suppliersList.forEach((data)=> { %>
                <tr class="table-header-text-center">
                    <td>
                        <%= data.id %>
                    </td>
                    <td>
                        <%= data.company_name %>
                    </td>
                    <td>
                        <%= data.contact_name %>
                    </td>
                    <td>
                        <%= data.contact_title %>
                    </td>
                    <td>
                        <%= data.address %>
                    </td>
                    <td>
                        <%= data.city %>
                    </td>
                    <td>
                        <%= data.region %>
                    </td>
                    <td>
                        <%= data.postal_code %>
                    </td>
                    <td>
                        <%= data.country %>
                    </td>
                    <td>
                        <%= data.phone %>
                    </td>
                    <td>
                        <%= data.fax %>
                    </td>
                    <td>
                        <%= data.homepage %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

</body>

<script src="js/Themes/UserTable_theme.js"></script>
</html>